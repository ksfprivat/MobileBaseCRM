<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="6dp">

<!--CardView Title-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_main"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        style="@style/CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/CustomerTitleShort"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etTitleShort"
                    android:textIsSelectable="true"
                    android:layout_weight="1"
                    android:textColor="@color/colorEditText"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:inputType="textMultiLine|textNoSuggestions" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/CustomerTitleFull"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etTitleFull"
                    android:textIsSelectable="true"
                    android:textColor="@color/colorEditText"
                    android:layout_weight="1"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:inputType="textMultiLine|textNoSuggestions" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--CardView Location-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_location"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        style="@style/CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/tvRegion"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etRegion"
                    android:textIsSelectable="true"
                    android:layout_weight="1"
                    android:textColor="@color/colorEditText"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:inputType="textMultiLine|textNoSuggestions" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"

            android:text="@string/CustomerCity"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etCity"
                    android:textIsSelectable="true"
                    android:textColor="@color/colorEditText"
                    android:layout_weight="1"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:inputType="textMultiLine|textNoSuggestions" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"

                android:text="@string/Ð¡ustomerAddress"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etAddress"
                    android:textIsSelectable="true"
                    android:textColor="@color/colorEditText"
                    android:layout_weight="1"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:inputType="textMultiLine|textNoSuggestions" />

            </LinearLayout>
            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:drawableLeft="@drawable/ic_my_location_grey_800_18dp"-->
                <!--android:drawablePadding="2dp"-->
                <!--android:text="@string/txtMap"-->
                <!--android:gravity="left|center_vertical" />-->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:text="@string/txtMap"
                android:drawableLeft="@drawable/ic_place_blue_700_24dp"
                android:textColor="@color/colorEditText"
                android:textSize="14sp"
                style="?attr/borderlessButtonStyle" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
